<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@color/colorPrimary">
    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/piechartimage"
        android:scaleType = "fitCenter"
        android:contentDescription="@string/contentPie">
    </ImageView>
    <TextView
        android:id="@+id/data_entry_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageview"
        android:text = "@string/data_entry"
        android:fontFamily = "sans-serif-medium"
        android:textSize="32sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp">
    </TextView>
    <TextView
        android:id="@+id/data_entry_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/pie_data_entry_info"
        android:layout_below="@id/data_entry_textview"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#ffffff"
        android:layout_margin="8dp">
    </TextView>
    <TextView
        android:id="@+id/pie_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pie_tag"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@id/data_entry_info"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp">
    </TextView>
    <EditText
        android:id="@+id/tag_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/data_entry_info"
        android:layout_toEndOf="@id/pie_tag"
        android:layout_marginEnd="24dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-medium"
        android:inputType="text">
    </EditText>
    <TextView
        android:id="@+id/pie_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/pie_values"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@id/pie_tag"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp">
    </TextView>
    <EditText
        android:id="@+id/value_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pie_tag"
        android:layout_toEndOf="@id/pie_value"
        android:layout_marginEnd="24dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-medium"
        android:inputType="numberDecimal">
    </EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pie_value"
        android:orientation="vertical">
    <Button
        android:id="@+id/add_values"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="sans-serif-medium"
        android:text="@string/add_values"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp">
    </Button>
    <Button
        android:id="@+id/plot_graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="sans-serif-medium"
        android:text="@string/plot_graph"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp">
    </Button>
    <Button
        android:id="@+id/reset_graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="sans-serif-medium"
        android:text="@string/reset_graph"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginTop="16dp">
    </Button>
    </LinearLayout>
</RelativeLayout>